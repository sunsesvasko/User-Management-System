extends base

block append head
    link(rel="stylesheet", href="/stylesheets/updateUser.css")
    title #{title}

block content
    .container
        a#go--back(href='/') 
            i.fa.fa-angle-double-left  All Users
        h1 Update User
        p Use the below form to Update an account
        form.form--edit
            label.labels(for="name") Name
            input.inputs(type="text" name="name" id='name' placeholder="Mark Stone") 
            label.labels(for="email") Email
            input.inputs(type="email" name="email" id='email' placeholder="example@gmail.com")
            .gender
                label.labels(for="gender") Gender
                .male--container
                    input.genderCb(type="radio" name="gender" value="Male")
                    label(for="gender") Male
                .female--container
                    input.genderCb(type="radio" name="gender" value="Female")
                    label(for="gender") Female
            .status
                label.labels(for="status") Status
                .active--container
                    input.statusCb(type="radio" name="status" value="Active")
                    label(for="gender") Active
                .inactive--container
                    input.statusCb(type="radio" name="status" value="Inactive")
                    label(for="gender") Inactive
            button#save(type="submit") Save

    
