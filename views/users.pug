extends base

mixin userRow(id, _id, name, email, gender, status)
    tr.user--row()
        td.id--td #{id}
        td.name--td #{name} 
        td.email--td #{email}
        td.gender--td #{gender}
        td.status--td #{status}
        td.action--td
            a#edit--btn(href='/updateUser' data-id=_id)
                i.fa.fa-pencil.fa-lg(data-id=_id)
            a#delete--btn(href='#' data-id=_id)
                i.fa.fa-times.fa-lg(data-id=_id)

block append head 
    title #{title}
    link(rel="stylesheet", href="/stylesheets/users.css")

block content
    .container
        a#new--user(href='/newUser') New User
            i.fa.fa-user.fa-lg
        table#users--table 
            tr.heads--row
                th#id--th ID
                th#name--th Name 
                th#email--th @Email
                th#gender--th Gender 
                th#status--th Status 
                th#action--th Action
            each user, index in users
                +userRow(index + 1, user._id, user.name, user.email, user.gender, user.status)